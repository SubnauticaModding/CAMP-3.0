{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "alwaysStrict": true,
    "pretty": true,
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.String",
    ]
  },
  "include": [
    "**/*.ts",
    "config/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}